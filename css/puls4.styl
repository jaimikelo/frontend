azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?nr9xpn');
	src:url('../fonts/icomoon.eot?#iefixnr9xpn') format('embedded-opentype'),
		url('../fonts/icomoon.woff?nr9xpn') format('woff'),
		url('../fonts/icomoon.ttf?nr9xpn') format('truetype'),
		url('../fonts/icomoon.svg?nr9xpn#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.6)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		padding 0 20px 0 0
		
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
		
		.publicar
			background naranja
			color white
			float right
			font-size 14px
			font-style italic
			margin -7px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				display inline-block
				content "\e600"
				font-family "iconitos"
				margin 1px 3px 0 0

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1.2em 0 0
			position relative
			z-index  2
			img
				border-radius 50%
				width 50px
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%

			&:after
				content "\e602"
				display inline-block
				font-family "iconitos"
				text-shadow 1px 1px 0 black

nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute



	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		overflow-y auto
		white-space nowrap

		li
			display inline-block

			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em

			.datos
				float right

				.comentarios
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					z-index 2

					&:before
						border-bottom 7px solid transparent
						border-right 10px solid transparent
						border-top 5px solid gris_texto
						content ""
						margin-top 20px
						position absolute
						z-index 1

				.estrellita
					text-decoration none

					&:after
						color #EEDE17
						content "\e601"
						font-family "iconitos"
						


			.votos
				float left

				.down
				.up
					text-decoration none

				.down
					color red
					&:before
						content "\e602"
						font-family "iconitos"
						font-size 1.5em
						vertical-align bottom

				.up
					color green
					&:before
						content "\e603"
						font-family "iconitos"
						font-size 1.5em
						vertical-align bottom

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left

				img
					height 160px
					vertical-align top
					width 120px
			

@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					font-size 2.5em
					left 0
					position absolute
					top -10px
					width 100%

	.posts
		.post
			display inline-block
			vertical-align top
			width 48%

			&:nth-child(odd)
				margin-right 2%

